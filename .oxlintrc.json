{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "extends": [
    "./node_modules/ultracite/config/oxlint/core/.oxlintrc.json",
    "./node_modules/ultracite/config/oxlint/remix/.oxlintrc.json"
  ],
  "ignorePatterns": [
    "packages/worker/worker-configuration.d.ts",
    "src-tauri/**/*"
  ],
  "rules": {
    "no-import-type-side-effects": "off",
    "func-style": "off",
    "sort-keys": "off",
    "require-hook": "off",
    "no-nested-ternary": "off",
    "unicorn/no-nested-ternary": "off",
    "no-unused-vars": "off",
    "no-param-reassign": "off",
    "no-empty-interface": "off",
    "no-empty-object-type": "off",
    "import/consistent-type-specifier-style": "off",
    "typescript/ban-ts-comment": "off",
    "typescript/prefer-ts-expect-error": "off",
    "max-statements": "off",
    "curly": "off",
    "consistent-type-imports": "off",
    "no-inline-comments": "off",
    "prefer-await-to-then": "off",
    "unicorn/no-array-sort": "off",
    "unicorn/no-array-for-each": "off",
    "jsdoc/require-yields": "off",
    "no-unused-expressions": "off",
    "require-await": "off",
    "prefer-destructuring": "off",
    "complexity": "off",
    "prefer-await-to-callbacks": "off",
    "no-relative-parent-imports": "off",
    "no-nodejs-modules": "off",
    "max-classes-per-file": "off",
    "no-conditional-in-test": "off",
    "max-expects": "off",
    "avoid-new": "off",
    "param-names": "off",
    "no-non-null-assertion": "off",
    "no-hooks": "off",
    "no-useless-collection-argument": "off",
    "class-methods-use-this": "off",
    "prefer-template": "off",
    "no-empty-function": "off",
    "filename-case": "off",
    "typescript/no-use-before-define": "off"
  }
}
